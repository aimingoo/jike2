{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    // "moduleResolution": "Node",
    // "moduleDetection": "force",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./types"],
    "allowSyntheticDefaultImports":true,
    "listEmittedFiles": false,
    "listFiles": false
    // "esModuleInterop": true,  // for import fs from 'fs';
  },
  "include": [
    "./t*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
  ]
}