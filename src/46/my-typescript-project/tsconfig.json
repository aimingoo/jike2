{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "inlineSourceMap": false, // include source map in emitted .js file
    "inlineSources": false,   // include source code in emitted .js file
    // "sourceRoot": "../src",               // set `sourceRoot` and `source` in in .js.map file
    // "mapRoot": "http://localhost:8080/",  // set `sourceMappingURL` in .js file


    // "baseUrl": "./",
    // "paths": {
    //   "#aaa": ["modules/aaa"],
    // }
    "rootDir": "src",
    "moduleResolution": "Node16",
    "resolvePackageJsonImports": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}